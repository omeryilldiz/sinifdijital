# SF Eğitim - Production Environment Configuration
# .env.production dosyasını kopyala ve değerlerini doldur

# ======================================
# CORE CONFIGURATION
# ======================================
FLASK_ENV=production
SECRET_KEY=<generate-with-secrets.token_urlsafe(32)>
DEBUG=False

# ======================================
# DATABASE
# ======================================
# PostgreSQL (RECOMMENDED for production)
DATABASE_URL=postgresql://sfuser:password@localhost/sfdb

# Database Pool Tuning (optimized for PostgreSQL)
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=60

# ======================================
# EMAIL / SMTP
# ======================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# ======================================
# CACHING & RATE LIMITING
# ======================================
# Redis for cache and rate limiting
REDIS_URL=redis://localhost:6379/0

# ======================================
# LOGGING
# ======================================
# Production logging level (WARNING, INFO, or ERROR)
# WARNING: Only important messages
# INFO: Normal operation messages
# ERROR: Only errors
LOG_LEVEL=WARNING

# Debug database connections (set to 'true' only for troubleshooting)
DEBUG_DB_CONNECTIONS=false

# ======================================
# SECURITY
# ======================================
# HTTPS/SSL configuration
PREFERRED_URL_SCHEME=https
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# ======================================
# PERFORMANCE
# ======================================
# Slow query detection threshold (milliseconds)
SLOW_QUERY_THRESHOLD_MS=100

# Cache timeout for context processor (seconds)
CACHE_TIMEOUT=300

# ======================================
# FEATURES
# ======================================
# Google OAuth (optional)
GOOGLE_CLIENT_ID=<optional>
GOOGLE_CLIENT_SECRET=<optional>

# ======================================
# UPLOADS
# ======================================
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=SF/static/uploads
SORU_UPLOAD_FOLDER=SF/static/soru_uploads
VIDEO_UPLOAD_FOLDER=SF/static/video_uploads
PDF_UPLOAD_FOLDER=SF/static/pdf_uploads
COZUM_UPLOAD_FOLDER=SF/static/cozum_uploads

# ======================================
# MONITORING (Optional but Recommended)
# ======================================
# Sentry error tracking
# SENTRY_DSN=https://key@sentry.io/project-id

# DataDog APM (Application Performance Monitoring)
# DD_TRACE_ENABLED=true
# DD_SERVICE=sf-egitim
# DD_ENV=production

# ======================================
# KUBERNETES / DOCKER (if applicable)
# ======================================
# PORT=5000
# HOST=0.0.0.0
